<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
    <div id="app">
        <div>
            <button v-on:click="count--">-</button>
                {{ count }}
            <button @click="count++">+</button> 
            <!-- Menggunakan shorthand v-on:click === @click -->

            <hr>
            <button @click="mengurangi">-</button>
                {{ count }}
            <button @click="menambahkan">+</button>
            
            <hr>
            <button @click="sayhallo('halo halo ges')">Say Hello!</button>

            <hr>
            <input type="text" v-on:keydown.space="sayhallo('halo halo ges')"></input>

            <hr>
            <form method="post" action="whatever.html" @submit.prevent>
                <input type="text">
                <input type="submit" value="send">
            </form>
        </div>
    </div>

    <script type="module">
        import { createApp } from 'https://unpkg.com/vue@3/dist/vue.esm-browser.js'

        createApp({
            data() {
                return {
                    count: 0
                }
            },
            methods: {
                mengurangi() {
                    this.count--
                },
                menambahkan() {
                    this.count++
                },
                sayhallo(params) {
                    alert(params)
                }
            },
        }).mount('#app')

    </script>
</body>
</html>
